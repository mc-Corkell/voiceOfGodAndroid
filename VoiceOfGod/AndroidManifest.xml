<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.voiceofgod"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/microphone"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.voiceofgod.MainActivity"
            android:label="@string/user_homepage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.voiceofgod.LoginActivity" />
        </activity>
        <activity
            android:name="com.example.voiceofgod.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.voiceofgod.NewTeamSlam"
            android:label="@string/title_activity_create_slam"
            android:parentActivityName="com.example.voiceofgod.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.voiceofgod.LoginActivity" />
        </activity>
    </application>

</manifest>